<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.SignUp"
    android:orientation="vertical"
    android:background="#f2bc94"
    android:padding="20dp">

    <TextView
        android:id="@+id/sign_up_app_logo"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:typeface="serif"
        android:textAlignment="center"
        android:text="TB"
        android:textSize="50sp"
        android:textColor="#143d59"
        android:textStyle="italic|bold"
        android:shadowColor="#fff"
        android:shadowDx="12"
        android:shadowDy="12"
        android:shadowRadius="12"/>

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WELCOME BUDDY !!!"
        android:layout_marginTop="20dp"
        android:textSize="24sp"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:textColor="#fff"
        android:shadowColor="#143d59"
        android:shadowRadius="5"
        android:shadowDy="4"
        android:shadowDx="4"/>

    <TextView
        android:id="@+id/sign_up_to_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up to begin your journey"
        android:textSize="18sp"
        android:fontFamily="monospace"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:id="@+id/new_full_name"
            android:hint="Your name"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/new_user_name"
            android:layout_marginBottom="5dp"
            android:hint="User name"
            app:counterEnabled="true"
            app:counterMaxLength="15"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:id="@+id/email"
            android:hint="Email"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:id="@+id/phone_number"
            android:hint="Phone"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:id="@+id/new_password"
            android:hint="Password"
            app:passwordToggleEnabled="true"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"/>

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <Button
        android:id="@+id/sign_up_go"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GO"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:background="#00000000"
        android:layout_marginBottom="5dp"/>

    <Button
        android:id="@+id/have_an_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Already have an account?"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:background="#00000000"
        android:layout_marginBottom="5dp"/>

</LinearLayout>